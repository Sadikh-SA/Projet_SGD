*******************************Meilleurs jeux au meilleur prix 
db.Avis.aggregate({$group:{_id:"$IdJeu",total:{$avg:"$note"}}},{$group:{_id:"$_id",moyenne:{$sum:"$total"}}},{$sort:{"moyenne":1}});
db.Avis.aggregate([
    {'$lookup':
        {'from' :"Jeux",
        'localField':"IdJeu",
        'foreignField':"identifiant",
        'as': "Jeux_avis"}
    },
    {'$group':
        {
        '_id':{'nom':"$Jeux_avis.nom",'prix':"$Jeux_avis.prix"},
        'total':{'$avg':"$note"}
        }
    },
    {'$group':
        {
        '_id':"$_id",
        'moyenne':{'$sum':"$total"}
        }
    },
    {'$match':
        {
            'moyenne':{'$gt':70},
            '_id.prix':{'$lt':50}
        }
    }
])